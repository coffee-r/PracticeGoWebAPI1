{
	"name": "PracticeGoWebAPI1",
	"dockerComposeFile": ["../docker/local/docker-compose.yml"],
	"workspaceFolder": "/usr/src/app",
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",  // Goの拡張
				"ms-vscode-remote.remote-containers",
				"golangci-lint.golangci-lint",  // Linter
				"ms-vscode.go-fmt"  // フォーマッター
			],
			"settings": {
				"go.toolsManagement.autoUpdate": true,
				"files.autoSave": "afterDelay",
				"go.debuggerPort": 12345,  // デバッガーのポート
				"go.formatTool": "goimports"  // フォーマッターの指定
			}
	  	}
	}
}